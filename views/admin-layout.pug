doctype html
html
    head
        title Shoestring | Admin
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/admin.css')
        link(rel='stylesheet' href='/font-awesome/css/font-awesome.min.css')

    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/admin') Shoestring Admin
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/') Home
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='#') Hello, #{admin.userName}
                        li
                            a(href='logout/' + admin.userId)
                                i.fa.fa-sign-out.fa-lg

        .container-fluid
            .row
                .col-sm-3.col-md-2.sidebar
                    ul.nav.nav-sidebar
                        li
                            a(href='/admin#overview') Overview 
                        li
                            a(href='/admin#users') Users
                        li
                            a(href='/admin#inventory') Inventory
                        li
                            a(href='/admin#sales') Sales
                .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                
                    block content
                    br
                    hr
                    footer
                        p Copyright &copy; 2017

        script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js')
        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/script.js')
