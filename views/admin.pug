doctype html
html
    head
        title Shoestring | Admin
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/admin.css')

    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') Shoestring Admin
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='#') Hello, #{admin}
                        li
                            a(href='#') Logout
                    form.navbar-form.navbar-right
                        input.form-control(type='text', placeholder='Search...')
        .container-fluid
            .row
                .col-sm-3.col-md-2.sidebar
                    ul.nav.nav-sidebar
                        li
                            a(href='#overview') Overview 
                        li
                            a(href='#users') Users
                        li
                            a(href='#inventory') Inventory
                        li
                            a(href='#sales') Sales
                .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                    h1 Overview

                    h2 Inventory
                    .table-responsive
                        table.table.table-striped
                            thead
                                tr
                                    th #
                                    th Item ID
                                    th Name
                                    th Brand
                                    th Price

                    button.btn.btn-success Add Item
                    button.btn.btn-warning Edit Item
                    button.btn.btn-danger Delete Item

                    h2 Users
                    .table-responsive
                        table.table.table-striped
                            thead
                                tr
                                    th #
                                    th User ID
                                    th First
                                    th Last
                                    th Orders
                    button.btn.btn-success Add User
                    button.btn.btn-warning Edit User
                    button.btn.btn-danger Delete User

                    h2 Orders
                    .table-responsive
                        table.table.table-striped
                            thead
                                tr
                                    th #
                                    th Order ID
                                    th Name
                                    th Brand
                                    th Price
                    button.btn.btn-success Add Order 
                    button.btn.btn-warning Edit Order 
                    button.btn.btn-danger Delete Order                                 



                    .container
                        block content
                        br
                        hr
                        footer
                            p Copyright &copy; 2017


        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
