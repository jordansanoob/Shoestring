extends admin-layout
block content
    h2 #{title}
    form(action='/inventory/add', method="POST")
        #form-group
            Label Item Name
            input.form-control(name="name", type="text" required)
        #form-group
            Label(for=sel) Brand
            select.form-control(name="brand", type="text" id=sel)
                option ADID
                option FARB
                option HLGR
                option NIKE
                option PTGA
                option SONY
                option TSBA
                option N/A

        #form-group
            Label(for=sel2) Department
            select.form-control(name="dept", type="text" id=sel2)
                option CLO
                option HME
                option BKS
                option ELE
                option ATO
                option MUS

        #form-group
            Label Price
            input.form-control(name="price", type="number", placeholder="$0.00" step=".01" required)
        input.btn.btn-primary(type="submit", value="Submit")