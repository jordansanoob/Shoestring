extends admin-layout
block content
    h1 Overview
        h2 Inventory
        .table-responsive
            table.table.table-striped
                thead
                    tr
                        th #
                        th Item ID
                        th Name
                        th Brand
                        th Price
                each item, i in inventory
                    tr
                        td= i+1
                        td= item.id
                        td= item.name
                        td= item.brand
                        td= item.price
                        td
                            a(href="/inventory/edit/" + item.id)
                                span.glyphicon.glyphicon-pencil
                            a(href="/inventory/delete")
                                span.glyphicon.glyphicon-trash
                tr
                    td
                        a(href="/item/add")
                                span.glyphicon.glyphicon-plus
                    td ----
                    td ----
                    td ----
                    td ----
                    td ----

        h2 Users
        .table-responsive
            table.table.table-striped
                thead
                    tr
                        th #
                        th User ID
                        th First
                        th Last
                        th Wallet
                each user, u in users
                    tr
                        td= u+1
                        td= user.id
                        td= user.first
                        td= user.last
                        td= user.wallet
                        td
                            a(href="/user/edit/" + user.id)
                                span.glyphicon.glyphicon-pencil
                            a(href="/user/delete")
                                span.glyphicon.glyphicon-trash
                tr
                    td
                        a(href="/user/add/")
                                span.glyphicon.glyphicon-plus
                    td ----
                    td ----
                    td ----
                    td ----
                    td ----
        h2 Orders
        .table-responsive
            table.table.table-striped
                thead
                    tr
                        th #
                        th Order ID
                        th Item ID
                        th Quantity
                        th Purchased Date

                each order, o in orders
                    tr
                        td= o + 1
                        td= order.id
                        td= order.name
                        td= order.qty
                        td= order.pdate
                        td
                            a(href="/order/edit/" + order.id)
                                span.glyphicon.glyphicon-pencil
                            a(href="/order/delete")
                                span.glyphicon.glyphicon-trash
                tr
                    td
                        a(href="/order/add")
                                span.glyphicon.glyphicon-plus
                    td ----
                    td ----
                    td ----
                    td ----
                    td ----

        #addModal.modal.fade(role='dialog')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal') ×
                        h4.modal-title Add
                    .modal-body
                        form(action='/add', method='post')
                            

                            .modal-footer
                                button.btn.btn-default(type='button', data-dismiss='modal') Cancel
                                input.btn.btn-success(type="submit" value="Add")
        #editModal.modal.fade(role='dialog')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal') ×
                        h4.modal-title Edit
                    .modal-body
                        form(action='', method='post')
                            block content
                                    
                            .modal-footer
                                button.btn.btn-default(type='button', data-dismiss='modal') Cancel
                                input.btn.btn-warning(type="submit" value="Submit")

        #deleteModal.modal.fade(role='dialog')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal') ×
                        h4.modal-title Delete
                    .modal-body
                        p Are you sure you want to delete this?

                            .modal-footer
                                button.btn.btn-default(type='button', data-dismiss='modal') Cancel
                                input.btn.btn-danger(type="submit" value="Delete")